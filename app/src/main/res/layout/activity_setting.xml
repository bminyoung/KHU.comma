<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_layout_around"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:text="시간표 세부설정"
                android:textSize="18sp" />

            <Button
                android:id="@+id/setting_btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Next" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />


        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_marginBottom="30dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:orientation="horizontal">-->

        <!--<TextView-->
        <!--android:id="@+id/setting_tv_tableName"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="시간표 이름 : "-->
        <!--android:textSize="17sp"/>-->

        <!--<EditText-->
        <!--android:id="@+id/setting_edt_fileName"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginRight="70dp"-->
        <!--android:maxLength="10"-->
        <!--android:singleLine="true"/>-->

        <!--<TextView-->
        <!--android:id="@+id/setting_tv_nameInfor"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginLeft="-70dp"-->
        <!--android:gravity="center_vertical"-->
        <!--android:text="(최대 10자)"-->
        <!--/>-->

        <!--</LinearLayout>-->


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--학점-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="최소학점 :"
                        android:textSize="20sp"/>

                    <Spinner
                        android:id="@+id/setting_spin_subCredit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:scrollbarSize="20dp"
                        android:layout_marginRight="10dp"
                        android:entries="@array/rank" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp">

                    <Spinner
                        android:id="@+id/setting_spin_creditMin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:entries="@array/credit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="~"
                        android:textSize="20sp"/>

                    <Spinner
                        android:id="@+id/setting_spin_creditMax"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:entries="@array/credit" />

                </LinearLayout>
                <!--학점끝-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c8c8c8" />
                <!--점심시간-->
                <LinearLayout style="@style/spinRank">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="점심시간 : "
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/setting_spin_subLunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:entries="@array/rank"
                        android:layout_weight="3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp">

                    <Spinner
                        android:id="@+id/setting_spin_lunchStart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/lunchStart"
                        android:layout_weight="3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" ~ "
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/setting_spin_lunchEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/lunchEnd"
                        android:layout_weight="3"/>

                </LinearLayout>
                <!--점심시간 끝-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c8c8c8" />
                <!--첫강의시작시간-->
                <LinearLayout style="@style/spinRank">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="첫 강의 시작 시간 : "
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/setting_spin_subFirstStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:entries="@array/rank"
                        android:layout_weight="3" />
                    <!--원래 width=20sp-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp">

                    <Spinner
                        android:id="@+id/setting_spin_firstStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/firstTime" />

                </LinearLayout>
                <!--첫강의시작시간 끝-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c8c8c8" />
                <!--강의시간간격-->
                <LinearLayout style="@style/spinRank">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="강의 시간 간격 :      "
                        android:textSize="20sp"/>

                    <Spinner
                        android:id="@+id/setting_spin_subTimeFlic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:entries="@array/rank" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp">

                    <Spinner
                        android:id="@+id/setting_spin_timeFlic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/timeFlic" />
                </LinearLayout>
                <!--강의시간간격 끝-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c8c8c8" />
                <!--공강요일-->
                <LinearLayout style="@style/spinRank">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="공강 요일 :              "
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/setting_spin_subEmptyDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:entries="@array/rank"
                        android:layout_weight="3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp">

                    <Spinner
                        android:id="@+id/setting_spin_emptyDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/weekday" />

                </LinearLayout>
                <!--공강요일 끝-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c8c8c8" />
                <!--요일수-->
                <LinearLayout style="@style/spinRank">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="공강 요일 수 :                  "
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/setting_spin_subDayCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:entries="@array/rank"
                        android:layout_weight="3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp">

                    <Spinner
                        android:id="@+id/setting_spin_dayCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/daycount" />

                </LinearLayout>
                <!--요일수 끝-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c8c8c8" />
                <!--수업최대시간-->
                <LinearLayout style="@style/spinRank">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="한 수업당 최대시간 :"
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/setting_spin_subClassTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:entries="@array/rank"
                        android:layout_weight="3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp">

                    <Spinner
                        android:id="@+id/setting_spin_classTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/classTime" />

                </LinearLayout>
                <!--수업최대시간끝-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c8c8c8" />

                <!--하루강의갯수-->
                <LinearLayout style="@style/spinRank">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="하루 최대 수업갯수 :"
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/setting_spin_subMaxClassNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:entries="@array/rank"
                        android:layout_weight="3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp">

                    <Spinner
                        android:id="@+id/setting_spin_maxClassNum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/maxClassNum" />

                </LinearLayout>
                <!--하루강의갯수 끝-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c8c8c8" />
                <!--하루강의시간-->
                <LinearLayout style="@style/spinRank">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="하루최대 수업시간 :"
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/setting_spin_subMaxClassTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:entries="@array/rank"
                        android:layout_weight="3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp">

                    <Spinner
                        android:id="@+id/setting_spin_maxClassTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/maxClassTime" />

                </LinearLayout>
                <!--하루강의시간 끝-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c8c8c8" />
                <!--요일별 끝나는시간-->
                <LinearLayout style="@style/spinRank">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="요일별 끝나는 시간 :"
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/setting_spin_subDayEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:entries="@array/rank"
                        android:layout_weight="3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월"
                        android:layout_weight="0.1"/>

                    <Spinner
                        android:id="@+id/setting_spin_Mon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/classEndTime"
                        android:layout_weight="4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="화"
                        android:layout_weight="0.1"/>

                    <Spinner
                        android:id="@+id/setting_spin_Tue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/classEndTime"
                        android:layout_weight="4"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="5dp"
                    android:gravity="left"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수"
                        android:layout_weight="0.1"/>

                    <Spinner
                        android:id="@+id/setting_spin_Wed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/classEndTime"
                        android:layout_weight="4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목"
                        android:layout_weight="0.1"/>

                    <Spinner
                        android:id="@+id/setting_spin_Thu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/classEndTime"
                        android:layout_weight="4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="금"
                        android:layout_weight="0.1"/>

                    <Spinner
                        android:id="@+id/setting_spin_Fri"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/classEndTime"
                        android:layout_weight="4"/>

                </LinearLayout>
                <!--요일별끝나는시간 끝-->

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>