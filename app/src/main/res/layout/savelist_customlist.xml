<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/savelist_lv_tv_tableName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/savelist_lv_btn_change"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/savelist_lv_btn_delete"
        android:layout_marginRight="10dp"
        android:padding="0dp"
        android:background="@mipmap/pencil" />

    <ImageButton
        android:id="@+id/savelist_lv_btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:background="@mipmap/delet" />
</RelativeLayout>