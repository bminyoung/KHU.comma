<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.HomeScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="table_tv_top">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_span">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/rectangle_openbottom</item>
    </style>

    <style name="table_tv_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_span">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/rectangle_opentop</item>
    </style>

    <style name="table_tv_leftTop">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:layout_span">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:background">@drawable/rectangle_openbottom</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="table_tv_leftBottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:layout_span">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:background">@drawable/rectangle_opentop</item>
    </style>

    <style name="spinRank">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">left</item>
        <item name="android:orientation">horizontal</item>
    </style>



</resources>






















